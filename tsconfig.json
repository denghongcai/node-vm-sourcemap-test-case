{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ES2017",
    "module": "none",
    "removeComments": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "composite": true,
    "allowJs": true,
    "outDir": "dist",
    "lib": ["es2017", "dom"]
  },
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "prettier.config.js",
    "test.js",
    "test-map.js",
    "coverage"
  ]
}
